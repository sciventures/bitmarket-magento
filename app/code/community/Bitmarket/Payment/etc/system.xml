<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <payment>
            <groups>
                <bitmarket translate="label" module="bitmarket">
                    <label>Bitmarket.ph (Bitcoin)</label>
                    <comment>
                        <![CDATA[
                            <a href="https://merchants.bitmarket.ph/signup" target="_blank">Click here to sign up for a free Bitmarket.ph merchant account</a>
                        ]]>
                    </comment>
                    <sort_order>999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <api_token translate="label">
                            <label>API Token</label>
                            <comment>
                                <![CDATA[
                                    A Bitmarket.ph API token is required.
                                    <br />
                                    <a href="https://merchants.bitmarket.ph/token" target="_blank">Click here to get your API token</a>
                                ]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </api_token>
                    </fields>
                </bitmarket>
            </groups>
        </payment>
    </sections>
</config>
